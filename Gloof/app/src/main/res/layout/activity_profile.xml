<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeprof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloof.gloof.ProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="170dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:splitMotionEvents="false">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Info"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_call"
            android:drawableRight="@drawable/ic_mode_edit"
            android:gravity="left|center"

            android:text="  Add Phone"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnChangeUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_person"
            android:drawableRight="@drawable/ic_mode_edit"
            android:gravity="left|center"
            android:password="false"
            android:phoneNumber="false"
            android:singleLine="false"

            android:text="  Change Username"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/btnChangeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawableRight="@drawable/ic_mode_edit"
            android:gravity="left|center"
            android:password="false"
            android:phoneNumber="false"
            android:singleLine="false"

            android:text="  Change Email"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_enhanced_encryption_black_24dp"
            android:drawableRight="@drawable/ic_mode_edit"
            android:gravity="left|center"

            android:text="  Change Password"
            android:textAllCaps="false" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Account"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGotoVerifyAccount"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_security_black"
                android:foreground="@android:color/transparent"
                android:gravity="left|center"

                android:text="  Account Verification Status:"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_error" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGotoDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:foreground="@android:color/transparent"
            android:gravity="left|center"

            android:text="  Delete  My  Account"
            android:textAllCaps="false" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSavePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignTop="@+id/cardView"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="106dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_camerasaveprofpic" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/CropProfileimageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/profpic2" />
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/imageButtonexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cardView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/cardView"
        android:layout_toRightOf="@+id/cardView"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_expand_more_black_24dp" />



</RelativeLayout>
